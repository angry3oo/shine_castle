<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="layout" template="base-main">
		<put-attribute name="header"></put-attribute>
		<put-attribute name="footer"></put-attribute>
		<put-attribute name="leftbar"></put-attribute>
	</definition>
	
	<definition name="main.*" extends="laylout">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>
	</definition>
	
	<definition name="main.*/*" extends="laylout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
	</definition>
	
	<definition name="main.*/*/*" extends="laylout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"></put-attribute>
	</definition>
</tiles-definitions>